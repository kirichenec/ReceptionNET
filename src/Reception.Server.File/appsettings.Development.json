{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "restrictedToMinimumLevel": "Debug"
                }
            },
            {
                "Name": "RollingFile",
                "Args": {
                    "pathFormat": "log\\log-{Date}.json",
                    "textFormatter": "JsonFormatter",
                    "fileSizeLimitBytes": 2147483648,
                    "retainedFileCountLimit": 5,
                    "rollingInterval": "Day"
                }
            }
        ]
    }
}