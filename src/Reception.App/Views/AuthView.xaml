<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Reception.App.Views.AuthView">
    <StackPanel HorizontalAlignment="Center"
              MinWidth="200"
              Orientation="Vertical"
              VerticalAlignment="Center">
        <TextBox Text="{Binding Login, Mode=TwoWay}" Watermark="Login"/>
        <TextBox Text="{Binding Password, Mode=TwoWay}" Watermark="Password" PasswordChar="*"/>
        <Button Content="Login" Command="{Binding LoginCommand}" IsDefault="True"/>
    </StackPanel>
</UserControl>