<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Reception.App"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             x:Class="Reception.App.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <themes:BundledTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="LightBlue"/>

        <Thickness x:Key="LeftTop">8,8,0,0</Thickness>
        <Thickness x:Key="RightBottom">0,0,8,8</Thickness>
    </Application.Resources>

    <Application.Styles>
        <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>
        <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>
        <StyleInclude Source="avares://Material.Avalonia/Material.Avalonia.Templates.xaml" />

        <Style Selector="DrawingPresenter">
            <Setter Property="Margin" Value="{DynamicResource RightBottom}"/>
        </Style>

        <Style Selector="Path">
            <Setter Property="Stroke" Value="Black"/>
        </Style>

        <Style Selector="Separator">
            <Setter Property="Margin" Value="0"/>
        </Style>

        <!--ToDo: Clear style after Material.Avalonia updated with my PR-->
        <Style Selector="Separator.Vertical">
            <Setter Property="Height" Value="NaN"/>
            <Setter Property="Margin" Value="{DynamicResource RightBottom}"/>
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="MinWidth" Value="1"/>
            <Setter Property="Width" Value="1"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}" BorderThickness="0">
                        <Rectangle Width="1" Fill="{TemplateBinding BorderBrush}"
                                   HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="StackPanel">
            <Setter Property="Margin" Value="{DynamicResource LeftTop}"/>
        </Style>

        <Style Selector="TextBlock">
            <Setter Property="Margin" Value="{DynamicResource RightBottom}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="Margin" Value="{DynamicResource RightBottom}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <Style Selector="TextBox TextBlock">
            <Setter Property="Margin" Value="0"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="Margin" Value="{DynamicResource RightBottom}"/>
        </Style>
        <Style Selector="Button > TextBlock">
            <Setter Property="Margin" Value="8,0"/>
        </Style>

        <Style Selector="ListBox">
            <Setter Property="Margin" Value="{DynamicResource RightBottom}"/>
        </Style>
    </Application.Styles>
</Application>